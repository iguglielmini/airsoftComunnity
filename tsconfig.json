{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "module": "CommonJS",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["@types/styled-components-react-native"]
  },
  "include": ["./@types/*.d.ts", "src/**/*"],
  "exclude": ["node_modules/**/*"]
}
